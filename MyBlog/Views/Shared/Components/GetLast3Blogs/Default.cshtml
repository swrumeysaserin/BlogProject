@using MyBlog.Entities.Concrate
@model List<Blog>

<div class="tech-btm">
    <h3>Latest Posts</h3>
    @foreach (var item in Model)
    {
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="/Blog/BlogDetail/@item.Id/">
                    <img src="@item.ImageUrl" class="card-img-top img-fluid" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">
                <h5>
                    <a href="/Blog/BlogDetail/@item.Id/">@item.Content</a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @item.CreateDate.ToShortDateString()
                    </span>
                </div>
            </div>
        </div>
    }
</div>