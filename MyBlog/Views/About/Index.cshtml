@using MyBlog.Entities.Concrate
@model List<About>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">About</h3>
        <div class="row inner-sec">
            <!--left-->

            <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                <div class="blog-grid-top">


                    <div class="blog_info_left_grid">
                        <a href="single.html">
                            <img src="~/MyBlogTema/images/b5.jpg" class="img-fluid" alt="">
                        </a>
                    </div>

                    @foreach (var item in Model)
                    {
                        <h3>
                            @item.Detail1
                        </h3>
                        <p>
                            @item.Detail2
                        </p>
                    }
                </div>

            </div>

            <!--//left-->
            <!--right-->
            <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                <div class="right-blog-info text-left">
                    <div class="tech-btm">
                        <img src="images/banner1.jpg" class="img-fluid" alt="">
                    </div>

                    <h4>Subscribe to our newsletter</h4>
                    @await Html.PartialAsync("~/Views/Subscriber/AddSubscribe.cshtml")


                    @await Html.PartialAsync("~/Views/About/AboutSocialMedia.cshtml")

                    @await Component.InvokeAsync("LastBlogOfWriter")
                </div>

            </aside>
            <!--//right-->
        </div>
    </div>
</section>

