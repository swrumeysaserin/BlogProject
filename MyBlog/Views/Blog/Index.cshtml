@using MyBlog.Entities.Concrate
@model List<Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Blog Posts</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card">
                            <a href="single.html">
                                <img src="@item.ImageUrl" class="card-img-top img-fluid" alt="" width="70" height="70">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i> @item.CreateDate.ToShortDateString()
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i> 0
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-eye"></i> @item.Category.Name
                                        </a>
                                    </li>
                                </ul>
                                <h5 class="card-title">
                                    <a href="/Blog/BlogDetail/@item.Id/">@item.Title</a>
                                </h5>
                                @*item.Content.Substring(0,6).LastIndexOf(" ")*@
                                <p class="card-text mb-3">@item.Content.Substring(0, 8)...</p>
                                <a href="/Blog/BlogDetail/@item.Id/" class="btn btn-primary read-m">Read More</a>
                            </div>
                        </div>
                    }
                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>